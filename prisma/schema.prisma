enum CaseStatus {
  WAITING
  IN_TREATMENT
  DISCHARGED
  TRANSFERRED
}

enum Action {
  ASSIGN_BED
  RELEASE_BED
  EXTEND_BED
  OVERRIDE_PRIORITY
}

enum Zone {  
  RED
  ORANGE
  YELLOW 
  GREEN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}